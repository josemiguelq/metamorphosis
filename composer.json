{
    "name": "leroy-merlin-br/metamorphosis",
    "type": "library",
    "keywords": [
        "kafka"
    ],
    "description": "Kafka package for laravel applications",
    "require": {
        "php": ">=7.1",
        "ext-rdkafka": "*",
        "ext-json": "*",
        "illuminate/support": "~5.5.0||~5.6.0||~5.7.0||~5.8.0",
        "illuminate/console": "~5.5.0||~5.6.0||~5.7.0||~5.8.0",
        "illuminate/config": "~5.5.0||~5.6.0||~5.7.0||~5.8.0"
    },
    "require-dev": {
        "leroy-merlin-br/coding-standard": "^0.1.0",
        "phpunit/phpunit": "^7.3",
        "kwn/php-rdkafka-stubs": "~1.1.0",
        "orchestra/testbench": "~3.5.0||~3.6.0||~3.7.0||~3.8.0",
        "satooshi/php-coveralls": "^1.0",
        "nealio82/avro-php": "^0.1.2"
    },
    "suggest": {
        "nealio82/avro-php": "Required to use Avro features."
    },
    "autoload": {
        "psr-4" : {
            "Metamorphosis\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Boitata Team",
            "email": "boitata@leroymerlin.com.br"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Metamorphosis\\MetamorphosisServiceProvider"
            ]
        },
        "aliases":{
            "Metamorphosis": "Metamorphosis\\Facades\\Metamorphosis"
        }
    }
}
